{
    "build": {
        "base": {
            "node": "20.12.0",
            "yarn": "1.22.5",
            "env": {
                "EXAMPLE_ENV": "example value"
            },
            "android": {
                "image": "default",
                "env": {
                    "PLATFORM": "android"
                }
            },
            "ios": {
                "image": "latest",
                "env": {
                    "PLATFORM": "ios"
                }
            }
        },
        "development": {
            "developmentClient": true,
            "distribution": "internal",
            "env": {
                "ENVIRONMENT": "development"
            },
            "android": {
                "buildType": "apk",
                "image": "latest",
                "withoutCredentials": true
            }
        },
        "preview": {
            "distribution": "internal"
        },
        "production": {}
    }
}